#!/bin/sh
if [ "$(id -u)" -ne 0 ]; then
    echo "you need root permissions" && exit 1
fi

MODULES="rss,shw,irc"
SERVER="localhost"
CHANNEL="#botib"
NICK="botlib"

if $1; then
   MODULES=$1
fi
if $2; then
   SERVER=$2
fi
if $3; then
    CHANNEL=$3
fi
if $4; then
    NICK=$4
fi

botctl cfg krn modules $MODULES
botctl cfg irc server $SERVER
botctl cfg irc channel $CHANNEL
botctl cfg irc nick $NICK
echo "done"
