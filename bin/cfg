if [ "$(id -u)" -ne 0 ]; then
    echo "you need root permissions" && exit 1
fi

MODULES="bot"
SERVER="localhost"
CHANNEL="#botlib"
NICK="botd"

bin/botctl cfg krn modules $1 or $MODULES
bin/botctl cfg irc server $2 or $SERVER
bin/botctl cfg irc channel $3 or $CHANNEL
bin/botctl cfg irc nick $4 or $NICK
echo "done"
