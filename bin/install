if [ "$(id -u)" -ne 0 ]; then
    echo "you need root permissions" && exit 1
fi
[ ! -d "/var/log/botd" ] && mkdir /var/log/botd
[ ! -d "/var/lib/botd" ] && mkdir /var/lib/botd
[ ! -d "/var/lib/botd/mods" ] && mkdir /var/lib/botd/mods
touch /var/log/botd/botd.log
#python3 setup.py install
cp bin/botd /usr/local/bin/botd
cp bin/botctl /usr/local/bin/botctl
cp mods/*.py /var/lib/botd/mods
cat > /etc/systemd/system/botd.service <<-EOM
[Unit]
Description=botd

[Service]
ExecStart=/usr/local/bin/botd
After=network-online.target
Wants=network-online.target

[Install]
WantedBy=multi-user.target
EOM
#bin/botctl cfg irc server localhost
#bin/botctl cfg irc channel \#botlib
systemctl enable botd
systemctl daemon-reload
service botd stop
service botd start
systemctl status botd --no-pager
