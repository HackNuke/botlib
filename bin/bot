#!/usr/bin/python3 -u
# OKBOT - the ok bot !
#
# main program.

from ok.krn import get_kernel
from ok.shl import checkargs, checkroot, execute

import sys

k = get_kernel()

def main():
    checkroot("bot")
    k.walk("ok,bot")
    if checkargs():
        return
    k.init("ok.csl,bot.irc")
    k.wait()
    
execute(main)
