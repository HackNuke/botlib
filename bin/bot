#!/usr/bin/python3 -u
# OKBOT - the ok bot !
#
# main program.

import os, sys ; sys.path.insert(0, os.getcwd())
import ok.obj

from bot.spc import args, cmd, execute, get_kernel

def main():
    ok.obj.workdir = os.path.expanduser("~/.bot")
    k = get_kernel()
    k.scan("bot")
    if args():
        return
    k.init("ok.csl")
    k.wait()
    
execute(main)
