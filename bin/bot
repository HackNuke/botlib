#!/usr/bin/env python3
# This file is placed in the Public Domain.


from bot.bus import Bus
from bot.clt import Client
from bot.krn import k


import bot.all, sys

class CLI(Client):

    def raw(self, txt):
        print(txt)


def cmd(txt):
    if not txt:
        return None
    c = CLI()
    k.add(c)
    e = c.event(txt)
    e.origin = "root@shell"
    e.parse()
    k.do(e)
    e.wait()



def main():
    k.parse_cli(" ".join(sys.argv[1:]))
    return cmd(k.prs.otxt)


main()
