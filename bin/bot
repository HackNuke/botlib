#!/usr/bin/python3 -u
# OKBOT - the ok bot !
#
# main program.

from ok.krn import cmd, get_kernel
from ok.shl import execute, checkroot

import sys

def main():
    checkroot("bot")
    if len(sys.argv) > 1:
        return cmd(" ".join(sys.argv[1:]), "ok,bot")
    k = get_kernel()
    k.walk("ok,bot")
    k.init("ok.csl,bot.irc")
    k.wait()
    
execute(main)
