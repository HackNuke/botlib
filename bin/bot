#!/usr/bin/python3
# BOTLIB - framework to program bots
#
#

import ol
import os

def main():
    k = ol.krn.boot("bot", "~/.bot")
    c = ol.csl.Console()
    c.start()
    k.scandir(k.cfg.md, "bmod")
    k.walk("bot,bmod")
    k.start()
    k.init(k.cfg.mods)
    k.wait()

ol.trm.execute(main)
os._exit(0)
