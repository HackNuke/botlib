#!/usr/bin/python3
# BOTLIB - framework to program bots
#
#

import ol
import os

def main():
    if not ol.utl.root():
         print("you need root privileges")
         return
    k = ol.krn.boot("bot", "/var/lib/bot/")
    k.scandir(k.cfg.md)
    k.walk("bmod")
    k.load_mod("bot.irc")
    k.start()
    k.init(k.cfg.mods)
    from bot.irc import IRC
    i = IRC()
    i.start()
    k.wait()

ol.trm.execute(main)
os._exit(0)
