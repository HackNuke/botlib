#!/usr/bin/python3 -u
# BOTLIB - the bot library !
#
#

__version__ = 86

import os, sys ; sys.path.insert(0, os.getcwd())

from bot.csl import Console
from bot.krn import k
from bot.shl import execute, parse_cli

def main():
    c = parse_cli()
    k.walk("botd")
    if c.txt:
        return k.cmd(c.txt, c)
    if "d" in c.opts:
        daemon()
    k.init(c.mods)
    if "s" in c.opts:
        con = Console()
        con.start()
        k.start()
        k.wait()

execute(main)
