#!/usr/bin/python3 -u
# BOTLIB - the bot library !
#
#

__version__ = 86

from bot.csl import Console
from bot.irc import IRC
from bot.krn import k
from bot.shl import execute, parse_cli

def main():
    cfg = parse_cli("bot")
    k.start(cfg)
    i = IRC()
    i.start(cfg)
    c = Console()
    c.start(cfg)
    k.wait()

execute(main)
