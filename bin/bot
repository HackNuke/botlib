#!/usr/bin/python3 -u
# OKBOT - the ok bot !
#
# main program.

from ok.csl import Console
from ok.shl import execute, checkroot
from bot.irc import IRC

def main():
    checkroot()
    i = IRC()
    i.start()
    c = Console()
    c.load_mod("ok.shw")
    c.walk("bot")
    c.start()
    c.wait()
    
execute(main)
