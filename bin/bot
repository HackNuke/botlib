#!/usr/bin/python3
"library for programming objects"

__version__ = 1

from csl import Console
from hdl import init, scandir
from prs import parse_cli
from trm import execute, os

def main():
    cfg = parse_cli()
    import obj
    obj.wd = os.path.expanduser("~/.bot")
    c = Console()
    scandir(c, "cmds")
    if cfg.txt:
       return c.cmd(cfg.txt)
    init(cfg.mods)
    c.start()
    c.wait()
     
execute(main)
os._exit(0)
