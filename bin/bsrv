#!/usr/bin/python3
# BOTLIB - framework to program bots
#
#

import ol
import os

def main():
    k = ol.krn.boot("botd", "/var/lib/botd/")
    k.scandir(k.cfg.md, "bmod")
    k.walk("bmod")
    k.start()
    k.init(k.cfg.mods)
    from bot.irc import IRC
    i = IRC()
    i.start()
    k.wait()

ol.trm.execute(main)
os._exit(0)
