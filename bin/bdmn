#!/usr/bin/python3
# BOTLIB - framework to program bots
#
#

import os, sys ; sys.path.insert(0, os.getcwd())
import ol

from bot.irc import IRC

def daemon():
    pid = os.fork()
    if pid != 0:
        reset()
        os._exit(0)
    os.setsid()
    os.umask(0)
    si = open("/dev/null", 'r')
    so = open("/dev/null", 'a+')
    se = open("/dev/null", 'a+')
    os.dup2(si.fileno(), sys.stdin.fileno())
    os.dup2(so.fileno(), sys.stdout.fileno())
    os.dup2(se.fileno(), sys.stderr.fileno())

def main():
    daemon()
    k = ol.krn.boot("botd")
    k.scandir(k.cfg.md)
    k.walk("bmod")
    k.load_mod("bot.irc")
    k.start()
    k.init(k.cfg.mods)
    i = IRC()
    i.start()
    k.wait()

ol.trm.execute(main)
os._exit(0)
