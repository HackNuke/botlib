#!/usr/bin/python3
# BOTLIB = framework to program bots
#
#

import ol
import os

def main():
    k = ol.krn.boot("bsh", os.path.expanduser("~/.bot/"))
    k.scandir(k.cfg.md)
    k.walk("bmod")
    k.start()
    k.init(k.cfg.mods)
    c = ol.csl.Console()
    c.start()
    k.wait()

ol.trm.execute(main)
os._exit(0)
