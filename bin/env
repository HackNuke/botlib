#!/usr/bin/python3
# This file is placed in the Public Domain.

import os

old =  os.getcwd()

def open(txt):
    try:
        for line in os.popen(txt).readlines():
            print(line.rstrip())
    except:
        pass

def main():
    open("bin/clean")
    for line in os.popen("python3 setup.py sdist").readlines():
        print(line.strip())
    open("python3 -mvirtualenv --system-site-packages env")
    open("env/bin/pip3 install botdev -f dist --upgrade --force-reinstall --no-cache-dir --no-deps")

if __name__ == "__main__":
    main()
    open("tar zcf env.tar.gz env")
