#!/usr/bin/python3 -u
# BOTLIB - the bot library !
#
#

import os, sys ; sys.path.insert(0, os.getcwd())
import ol


def main():
    k = ol.krn.boot("table", os.path.expanduser("~/.bot"))
    print(dir(ol.tbl))
    if "classes" not in dir(ol.tbl):
        ol.tbl.classes = {}
    if "cmds" not in dir(ol.tbl):
        ol.tbl.cmds = {}
    if "mods" not in dir(ol.tbl):
        ol.tbl.mods= {}
    if "names" not in dir(ol.tbl):
        ol.tbl.names = {}
    k.walk("ol")
    k.walk("bmod")
    k.walk("bot")
    print("# BOTLIB - framework to program bots")
    print("#")
    print("#")
    print("")
    print("classes = %s" % str(ol.tbl.classes))
    print("")
    print("cmds = %s" % str(ol.tbl.cmds))
    print("")
    print("mods = %s" % ol.tbl.mods)
    print("")
    print("names = %s" % ol.tbl.names)
 
ol.trm.execute(main)
