#!/usr/bin/python3 -u
# BOTLIB - Framework to program bots.
#
# bin/botd (bot daemon)

__version__ = 83

import lo, os

from lo.krn import Kernel
from lo.shl import daemon, execute, level

def main():
    lo.cfg.workdir = lo.workdir = "/var/lib/botd"
    level("debug", "/var/log/botd/bot.log")
    k = Kernel()
    k.start()
    k.wait()
    
execute(main)
os._exit(0)
