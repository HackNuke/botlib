#!/usr/bin/python3 -u
# BOTLIB - Framework to program bots.
#
# bin/botd (bot daemon)

import lo
import os
import sys

from bot import k

def main():
    lo.workdir ="/var/lib/botd/"
    lo.shl.level("debug", "/var/log/botd/botd.log")
    k.start()
    k.wait()
    
lo.shl.execute(main)
os._exit(0)
