#!/usr/bin/python3 -u
# BOTLIB - the bot library !
#
#

from bot.krn import k
from bot.shl import daemon, execute, parse_cli, root
from bot.rss import Fetcher
from bot.irc import IRC

## main

def main():
    cfg = parse_cli("botd")
    if root():
        k.cmds.register("hup", hup)
        k.cmds.register("install", install)
        k.cmds.register("remove", remove)
    else:
        daemon()
    i = IRC()
    i.start()
    f = Fetcher()
    f.start()
    k.start()
    k.wait()
       
execute(main)
