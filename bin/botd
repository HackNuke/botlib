#!/usr/bin/env python3
# This file is placed in the Public Domain.


import os, sys


from bot.irc import Cfg as IRC
from bot.krn import k
from bot.obj import Cfg
from bot.run import spl


Cfg.wd = "/var/lib/botd/"


IRC.nick = "botd"
IRC.channel = "#botd"


import bot.all


def daemon():
    pid = os.fork()
    if pid != 0:
        os._exit(0)
    os.setsid()
    os.umask(0)
    si = open("/dev/null", 'r')
    so = open("/dev/null", 'a+')
    se = open("/dev/null", 'a+')
    os.dup2(si.fileno(), sys.stdin.fileno())
    os.dup2(so.fileno(), sys.stdout.fileno())
    os.dup2(se.fileno(), sys.stderr.fileno())



def main():
    daemon()
    k.cfg.mod += ",irc"
    for mn in spl(k.cfg.mod):
        k.init("bot.%s" % mn)
    k.wait()


main()
