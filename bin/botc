#!/usr/bin/env python3
# This file is placed in the Public Domain.


import sys


from bot.clt import Client
from bot.irc import Cfg as IRC
from bot.krn import k
from bot.obj import Cfg


Cfg.wd = "/var/lib/botd/"


IRC.nick = "botd"
IRC.channel = "#botd"


import bot.all


class CLI(Client):

    def __init__(self):
        super().__init__()
        k.add(self)

    def raw(self, txt):
        print(txt)


def main():
    k.parse_cli(" ".join(sys.argv[1:]))
    if not k.prs.txt:
        return
    c = CLI()
    k.cmd(c, k.prs.otxt)

main()
