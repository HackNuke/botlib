#!/usr/bin/env python3
# This file is placed in the Public Domain.

import os
import sys 

sys.path.insert(0, "bot")

from dbs import merge
from hdl import Client, docmd
from krn import Kernel
from obj import cfg, opts
from trm import exec
from ver import __version__

class CLI(Client):

    def handle(self, e):
        super().handle(e)
        e.wait()

    def raw(self, txt):
        print(txt)

class Console(CLI):

    def poll(self):
        return input("> ")

def main():
    k = Kernel()
    k.boot("bots", __version__, "/var/lib/bot/")
    if cfg.txt:
        c = CLI()
        return c.cmd(cfg.otxt)
    if opts("c"):
        c = Console()
    else:
        c = Client()
    if cfg.mods:     
        k.inits(cfg.mods)
        c.start()
        c.wait()

exec(main)
